@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.WebStaticConfig.WebName-绑定账号</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <style>
        .bodyContent {
            background-color: #fff;
            /*background: url(/images/login-background.jpg) no-repeat center fixed;*/
        }

        .signinpanel {
            width: 750px;
            margin: 10% auto 0 auto;
        }

        /* .signinpanel .logopanel {
            float: none;
            width: auto;
            padding: 0;
            background: none;
        } */

        .signup-footer {
            border-top: solid 1px rgba(255, 255, 255, .3);
            margin: 20px 0;
            padding-top: 15px;
        }

        .signinpanel .uname {
            background: #fff url(/images/user.png) no-repeat 95% center;
            color: #333;
        }

        .signinpanel .pword {
            background: #fff url(/images/locked.png) no-repeat 95% center;
            color: #333;
        }
    </style>
</head>

<body class="bodyContent">
    <div class="signinpanel">
        <div class="row">
            <div class="col-sm-7">
                <div class="signin-info">
                    <div class="logopanel m-b">
                        <h3>@ViewBag.WebStaticConfig.LoginPageTitle</h3>
                        <p>@ViewBag.WebStaticConfig.LoginPageDesc</p>
                    </div>
                    <div class="m-b"></div>
                </div>
            </div>
            @if (ViewBag.IsError)
            {
            <div class="col-sm-5">
                <span style="color:red">
                    @ViewBag.ErrorMessage
                </span>
            </div>
            }
            else
            {
            <div class="col-sm-5">
                <form id="loginForm" method="post">
                    <h4 class="no-margins">绑定账号</h4>
                    <div class="form-group">
                        <input id="loginName" type="text" class="form-control uname" placeholder="用户名" />
                    </div>
                    <div class="form-group" id="userNameDiv">
                        <input id="userName" type="text" class="form-control uname" placeholder="显示昵称" />
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" class="form-control pword m-b" placeholder="密码" />
                    </div>
                    <button id="btnLogin" class="btn  btn-block btn-primary" type="button">绑定</button>
                    <br />
                    <song class="text-warning"></song>
                    <button id="btnRegist" class="btn  btn-block btn-primary" type="button">没有账号,注册账号</button>
                </form>
            </div>
            }
            <input id="loginID" hidden value="@ViewBag.GitHubUser.login" />
        </div>
        <div class="signup-footer">
            <div class="pull-left">
                &copy;@System.DateTime.Now.Year All Rights Reserved.
            </div>
        </div>
    </div>


    <!-- 模态框（Modal） -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">提示信息</h4>
                </div>
                <div id="mdText" class="modal-body">提示信息</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>

    @Html.AntiForgeryToken()

    <script>

        //var pageReload = false;
        var type = 0;//0 有账号直接绑定  1 没账号注册账号绑定
        $(document).keyup(function (event) {
            if (event.keyCode == 13) {
                $("#btnLogin").trigger("click");
            }
        });

        function showDialog(msg) {
            $('#mdText').text(msg)
            $('#myModal').modal('show')
        }

        $(function () {
            //模态窗体 关闭后动作
            //$('#myModal').on('hidden.bs.modal', function () {
            //    // 执行一些动作...
            //    //重新加载页面
            //    if (pageReload) {
            //        location.reload();
            //    }

            //})

            var userNameDiv = $("#userNameDiv");
            userNameDiv.hide();
            var btnRegist = $("#btnRegist");

            $("#btnLogin").click(function () {
                pageReload = false;
                pageJumps = "";
                var loginName = $("#loginName").val();
                var userName = $("#userName").val();
                var password = $("#password").val();
                var chcekCode = $("#chcekCode").val();
                var token = $("input[name='__RequestVerificationToken']").val();
                var loginID = $("#loginID").val();
                if (loginName == "") {
                    showDialog("用户名不能为空");
                    return;
                }
                if (password == "") {
                    showDialog("密码不能为空");
                    return;
                }
                //if (chcekCode == "") {
                //    showDialog("验证码不能为空");
                //    return;
                //}

                $.post("/Oauth/BindingAccount/date=" + new Date().getTime(), { LoginID: loginID, LoginName: loginName, UserName: userName, Password: password, Type: type, ChcekCode: chcekCode, __RequestVerificationToken: token }, function (data) {
                    if (data.code === 0) {
                        location.href = data.rows;
                    }
                    else {
                        //pageReload = true;
                        //$("#imgVerify").click();
                        showDialog(data.msg);
                    }
                });
            });


            $("#btnRegist").click(function () {
                if (type == 0) {
                    userNameDiv.show();
                    type = 1;
                    btnRegist.text("已有账号，绑定账号");
                } else {
                    userNameDiv.hide();
                    type = 0;
                    btnRegist.text("没有账号,注册账号");
                }
            });



        });
    </script>

</body>
</html>