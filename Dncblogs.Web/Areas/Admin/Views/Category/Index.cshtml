@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/js/bootstrap-treeview.min.js"></script>
@*<ol class="breadcrumb">
    <li class="active">分类管理</li>
</ol>*@

<table class="table table-bordered">
    <tbody>
        <tr>
            <td style="width:300px;vertical-align:top;">
                <div id="treeview-searchable" class=""></div>
            </td>
            <td>
                <div class="page-header">
                    <h3>添加</h3>
                </div>
                <div class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="firstname" class="col-sm-2 control-label">上级分类</label>
                        <div class="col-sm-2">
                            <span id="add_pname"></span>
                            <input type="hidden" id="add_pid" value="0" />
                            <button id="btnSetTop" type="button" class="btn btn-primary">设为顶级分类</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-sm-2 control-label">分类名称</label>
                        <div class="col-sm-2">
                            <input id="add_caname" type="text" class="form-control" placeholder="请输入分类名称">
                            <input id="add_id" type="hidden" value="0" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-sm-2 control-label">编号</label>
                        <div class="col-sm-2">
                            <input id="add_sort" type="text" class="form-control" placeholder="请输入编号">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button id="btnAdd" type="button" class="btn btn-primary">添加</button>
                        </div>
                    </div>
                </div>

                <div class="page-header">
                    <h3>编辑</h3>
                </div>
                <div class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="firstname" class="col-sm-2 control-label">上级分类</label>
                        <div class="col-sm-2">
                            <select id="mod_pid" class="form-control">
                                <option value="0">顶级分类</option>
                                @foreach (var ic in ViewBag.CyList)
                                {
                                    <option value="@ic.CategoryId">@ic.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-sm-2 control-label">分类名称</label>
                        <div class="col-sm-2">
                            <input id="mod_id" type="hidden" value="0" />
                            <input id="mod_caname" type="text" class="form-control" placeholder="请输入分类名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-sm-2 control-label">编号</label>
                        <div class="col-sm-2">
                            <input id="mod_sort" type="text" class="form-control" placeholder="请输入编号">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-1">
                            <button id="btnMod" type="button" class="btn btn-primary">编辑</button>
                        </div>
                    </div>
                </div>


                <div class="page-header">
                    <h3>删除</h3>
                </div>
                <div class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="firstname" class="col-sm-2 control-label">所选分类</label>
                        <div class="col-sm-2">
                            <span id="del_caname"></span>
                            <input type="hidden" id="del_id" value="0" />
                            <button id="btnDel" type="button" class="btn btn-primary">删除</button>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<input type="hidden" id="cyUserid" value="0" />
<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">提示信息</h4>
            </div>
            <div id="mdText" class="modal-body">提示信息</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
@Html.AntiForgeryToken()

<script>
    $(function () {
        var $searchableTree = $('#treeview-searchable').treeview({
            data: @Html.Raw(ViewBag.TreeNodeList),
            nodeIcon: "glyphicon glyphicon-list-alt",
            onNodeSelected: function (event, node) {
               // console.log(node);
                $("#cyUserid").val(node.userId);
                //添加分类
                $("#add_pname").text(node.text);
                $("#add_pid").val(node.id);
                //删除分类
                $("#del_caname").text(node.text);
                $("#del_id").val(node.id);
                //修改分类
                $("#mod_caname").val(node.text);
                $("#mod_id").val(node.id);
                $("#mod_pid").val(node.pId);
                $("#mod_sort").val(node.sort);
                //alert(node.pId);
            }
        });

        //模态窗体 关闭后动作
        $('#myModal').on('hidden.bs.modal', function () {
            // 执行一些动作...
            //重新加载页面
            location.reload();
        })

        //设置顶级分类
        $("#btnSetTop").click(function (obj) {
            $("#add_pid").val("0");
            $("#add_pname").text("");
        });

        //添加
        $("#btnAdd").click(function (obj) {
            var cname = $("#add_caname").val();
            if (cname === "") {
                showDialog('分类名称不能为空,请输分类名称！');
                return;
            }
            var pid = $("#add_pid").val();
            var token = $("input[name='__RequestVerificationToken']").val();
            var userid = $("#cyUserid").val();
            var sort = $("#add_sort").val();

            $.post('/Admin/Category/Add', { "CategoryName": cname, "ParentId": pid, "UserId": userid,"Sort":sort, __RequestVerificationToken: token },
                function (obj) {
                    if (obj.code == 0) {
                        showDialog(obj.msg);
                    }
                    else {
                        showDialog(obj.msg);
                    }
                });
        });

        //删除
        $("#btnDel").click(function () {
            var cid = $("#del_id").val();
            var token = $("input[name='__RequestVerificationToken']").val();
            var userid = $("#cyUserid").val();
            $.post("/Admin/Category/Delete", { "categoryId": cid, "userId": userid, __RequestVerificationToken: token }, function (obj) {
                if (obj.code == 0) {
                    showDialog(obj.msg);
                }
                else {
                    showDialog(obj.msg);
                }
            });
        });

        $("#btnMod").click(function () {
            var cid = $("#mod_id").val();
            var cname = $("#mod_caname").val();
            var pid = $("#mod_pid").val();
            var token = $("input[name='__RequestVerificationToken']").val();
            var userid = $("#cyUserid").val();
            var sort = $("#mod_sort").val();
            $.post("/Admin/Category/Modify", { "CategoryId": cid, "UserId": userid, "ParentId": pid, "CategoryName": cname, "Sort": sort, __RequestVerificationToken: token }, function (obj) {
                if (obj.code == 0) {
                    showDialog(obj.msg);
                }
                else {
                    showDialog(obj.msg);
                }
            });

        });

    });

    function showDialog(msg) {
        $('#mdText').text(msg)
        $('#myModal').modal('show')
    }

</script>